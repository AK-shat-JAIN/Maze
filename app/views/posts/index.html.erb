<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Document</title>
</head>
<body class="px-2 md:px-8">

  <nav class="flex justify-center w-full md:py-2">
    <div class="flex w-full md:px-6 justify-between items-center">
      <div class="flex gap-4 p-4 items-center md:w-1/3">
        <img src="<%= asset_path('icon.svg')%>" class="w-8 md:w-10" alt="icon">
        <p class="text-2xl md:text-4xl font-serif font-semibold text-gray-800">Maze</p>
      </div>
      <div class="flex gap-6 p-4 items-center md:w-2/3 md:border-2 border-indigo-600 rounded-2xl">
        <img src="<%= asset_path('search.svg')%>" class="w-6" alt="icon">
        <input class="hidden md:block w-full text-lg font-medium text-gray-600 focus:outline-none" placeholder="Search for something here...">
      </div>
    </div>
  </nav>

  <main class="flex flex-col gap-4 bg-gray-200 rounded-2xl px-2 py-4 md:px-8 md:py-8">
    <form action="<%= posts_path %>" method="post" class="flex flex-col items-center justify-center py-4 px-2 md:px-8 md:py-8 bg-white rounded-2xl">
      <div class="flex flex-col gap-y-5 w-full px-2">
        <div>
          <label for="title" class="block text-base font-medium text-gray-900">Title</label>
          <div class="mt-2">
            <div class="flex items-center rounded-md bg-white outline-1 -outline-offset-1 outline-gray-300 focus-within:outline-2 focus-within:-outline-offset-2 focus-within:outline-indigo-600">
              <input type="text" name="title" id="title" class="shrink-0 block min-w-0 grow py-1.5 px-3 text-base text-gray-900 placeholder:text-gray-400 focus:outline-none sm:text-sm/6 md:text-lg" placeholder="Whats happening...?">
            </div>
          </div>
        </div>

        <div>
          <label for="description" class="block text-base font-medium text-gray-900">Description</label>
          <div class="mt-2">
            <textarea name="description" id="description" rows="3" class="block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6 md:text-lg" placeholder="Describe something...?"></textarea>
          </div>
        </div>

        <div>
          <span class="block text-base font-medium text-gray-900">Visibility</span>
          <div class="flex gap-4 pt-1 mt-2">
            <label class="flex items-center gap-1 md:gap-2 cursor-pointer">
              <input type="radio" name="public" value=true class="hidden peer" checked>
              <div class="w-5 h-5 rounded-full border-2 border-gray-400 peer-checked:border-indigo-600 peer-checked:bg-indigo-600"></div>
              <span class="text-gray-900 text-sm md:text-base">Public</span>
            </label>

            <label class="flex items-center gap-1 md:gap-2 cursor-pointer">
              <input type="radio" name="public" value=false class="hidden peer">
              <div class="w-5 h-5 rounded-full border-2 border-gray-400 peer-checked:border-indigo-600 peer-checked:bg-indigo-600"></div>
              <span class="text-gray-900 text-sm md:text-base">Private</span>
            </label>
          </div>
        </div>

        <div class="flex flex-col md:flex-row justify-between gap-4">
          <div class="flex justify-around gap-4 md:gap-6">
            <div class="flex items-center gap-2 hover:cursor-pointer">
              <img src="<%= asset_path('video.svg')%>" alt="">
              <p class="text-xs md:text-lg">Live Video</p>
            </div>
            <div class="flex items-center gap-2 hover:cursor-pointer">
              <img src="<%= asset_path('image.svg')%>" alt="">
              <p class="text-xs md:text-lg">Photo/Video</p>
            </div>
            <div class="flex items-center gap-2 hover:cursor-pointer">
              <img src="<%= asset_path('smile.svg')%>" alt="">
              <p class="text-xs md:text-lg">Feeling</p>
            </div>
          </div>

          <div>
            <button class="w-full bg-indigo-600 hover:bg-indigo-800 text-white py-3 md:px-8 rounded-lg text-xl font-medium hover:cursor-pointer">Post</button>
          </div>
        </div>
      </div>
    </form>

    <% @posts.each do |post| %>
      <div class="flex flex-col items-center justify-center py-4 px-4 md:px-8 md:py-8 bg-white rounded-2xl">
        <h1 class="w-full font-medium text-lg md:text-2xl"><%= post.title %></h1>
        <p class="w-full text-gray-400 text-xs md:text-sm"><%= time_ago_in_words(post.created_at) %>, <%= post.public ? "Public" : "Private" %></p>

        <div class="w-full text-gray-800 text-sm md:text-lg py-8" x-data="{ expanded: false, fullText: '<%=  post.description %>', isLongText: false }" x-init="isLongText = fullText.split(' ').length > 50">

          <p class="text-gray-700">
              <span x-text="expanded || !isLongText ? fullText : fullText.split(' ').slice(0, 50).join(' ') + '...'"></span>
          </p>

          <template x-if="isLongText">
            <button @click="expanded = !expanded"
              class="mt-3 text-blue-600 hover:text-blue-800 font-semibold focus:outline-none">
              <span x-text="expanded ? 'Read less' : 'Read more'"></span>
            </button>
          </template>
        </div>

        <div class="w-full text-gray-400 pb-3">
          <span class="text-sm md:text-base">221 Likes</span>
          <span class="text-black px-1">â€¢</span>
          <span class="text-sm md:text-base">3 Comments</span>
        </div>

        <hr class="w-full border-gray-300">

        <div class="w-full flex items-center gap-8">
          <div class="flex items-center gap-2 py-4">
            <div x-data="{ liked: false }" class="flex">
              <button type="button"
                @click="liked = !liked"
                :class="liked ? 'text-red-500' : 'text-gray-300'"
                class="size-5 inline-flex justify-center items-center text-2xl rounded-full hover:text-red-500 text-neutral-600 cursor-pointer">
                <svg class="shrink-0 size-5" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                  <path fill-rule="evenodd" d="M8 1.314C12.438-3.248 23.534 4.735 8 15-7.534 4.736 3.562-3.248 8 1.314z"></path>
                </svg>
              </button>
            </div>
            <p class="text-sm md:text-lg">Like</p>
          </div>
          <div class="flex items-center gap-2 py-4">
            <div class="flex text-neutral-600">
              <svg class="shrink-0 size-5" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                <path d="M2 2a2 2 0 0 0-2 2v7a2 2 0 0 0 2 2h3.586l2.707 2.707A1 1 0 0 0 10 15v-2h4a2 2 0 0 0 2-2V4a2 2 0 0 0-2-2H2zm0 1h12a1 1 0 0 1 1 1v7a1 1 0 0 1-1 1h-5v2.5L5.5 12H2a1 1 0 0 1-1-1V4a1 1 0 0 1 1-1z"/>
              </svg>
            </div>
            <p class="text-sm md:text-lg">Comment</p>
          </div>
        </div>

        <hr class="w-full border-gray-300">

        <form class="w-full flex items-center gap-2 py-4">
          <input type="text" class="w-full rounded-lg bg-gray-100 px-3 py-2 text-base text-gray-900 outline-1 outline-gray-300 placeholder:text-gray-400 focus:outline-indigo-600 sm:text-sm/6 md:text-lg" placeholder="Write a comment...">
          <button class="bg-[#EAF4FF] hover:bg-[#99caff] p-3 rounded-lg text-lg font-medium hover:cursor-pointer"><img src="<%= asset_path('arrow.svg')%>" class="w-6" alt="arrow"></button>
        </form>

        <h1 class="w-full font-medium text-gray-400 text-lg md:text-2xl">Comments</h1>
        <hr class="w-full border-gray-300">

        <div class="w-full flex flex-col px-2 md:px-10 py-1 md:py-3 justify-center bg-gray-100">
          <div class="flex items-center">
            <p class="w-full font-normal text-base md:text-2xl">Piyam Goyal</p>
            <div class="flex items-center gap-1">
              <div x-data="{ liked: false }" class="flex">
                <button type="button"
                  @click="liked = !liked"
                  :class="liked ? 'text-red-500' : 'text-gray-300'"
                  class="size-5 inline-flex justify-center items-center text-2xl rounded-full hover:text-red-500 text-neutral-600 cursor-pointer">
                  <svg class="shrink-0 size-4" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M8 1.314C12.438-3.248 23.534 4.735 8 15-7.534 4.736 3.562-3.248 8 1.314z"></path>
                  </svg>
                </button>
              </div>
              <p>2</p>
            </div>
          </div>
          <div class="flex items-center justify-between py-1">
            <p class="font-light text-base">Great Work Guys !</p>
            <p class="font-light text-sm">2h</p>
          </div>
        </div>

        <div id="hs-show-hide-collapse-heading" class="hs-collapse hidden w-full overflow-hidden transition-[height] duration-300" aria-labelledby="hs-show-hide-collapse">
            <%# hidden %>

          <div style="margin-top: 6px;" class="w-full flex flex-col px-2 md:px-10 py-1 md:py-3 justify-center bg-gray-100">
            <div class="flex items-center ">
              <p class="w-full font-normal text-base md:text-2xl">Piyam Goyal</p>
              <div class="flex items-center gap-2">
                <div x-data="{ liked: false }" class="flex">
                  <button type="button"
                    @click="liked = !liked"
                    :class="liked ? 'text-red-500' : 'text-gray-300'"
                    class="size-5 inline-flex justify-center items-center text-2xl rounded-full hover:text-red-500 text-neutral-600 cursor-pointer">
                    <svg class="shrink-0 size-4" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                      <path fill-rule="evenodd" d="M8 1.314C12.438-3.248 23.534 4.735 8 15-7.534 4.736 3.562-3.248 8 1.314z"></path>
                    </svg>
                  </button>
                </div>
                <p>2</p>
              </div>
            </div>
            <div class="flex items-center justify-between py-1">
              <p class="font-light text-base">Great Work Guys !</p>
              <p class="font-light text-sm">2h</p>
            </div>
          </div>


        </div>

        <p class="w-full text-right mt-2">
            <button type="button" class="hs-collapse-toggle inline-flex items-center gap-x-1 text-sm font-semibold rounded-lg border border-transparent text-blue-600 decoration-2 hover:text-blue-700 hover:underline focus:outline-none focus:underline focus:text-blue-700 disabled:opacity-50 disabled:pointer-events-none dark:text-blue-500 dark:hover:text-blue-600 dark:focus:text-blue-600" id="hs-show-hide-collapse" aria-expanded="false" aria-controls="hs-show-hide-collapse-heading" data-hs-collapse="#hs-show-hide-collapse-heading">
              <span class="hs-collapse-open:hidden">Load more</span>
              <span class="hs-collapse-open:block hidden">Hide</span>
              <svg class="hs-collapse-open:rotate-180 shrink-0 size-4" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="m6 9 6 6 6-6"></path>
              </svg>
            </button>
          </p>

      </div>

      <% end %>


  </main>


</body>
</html>
