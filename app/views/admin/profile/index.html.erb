<main class="flex flex-col gap-8 md:gap-4 w-full bg-gray-200 rounded-2xl px-4 py-8 md:px-8 md:py-8">
  <div class="flex justify-between items-center">
    <p class="text-xl md:text-3xl text-center font-semibold text-gray-500">Profile</p>
  </div>

  <div class="flex flex-col md:flex-row justify-center gap-8">
    <div class="md:w-[20%] flex flex-col justify-center gap-8 bg-red py-12 px-4 text-center bg-white rounded-3xl">
      <div class="flex flex-col">
            <div class="flex w-full justify-center">
              <%= image_tag(@user.avatar.present? ? @user.avatar : 'avatar.png', class: "w-34 md:w-16 md:h-16 rounded-xl") %>
            </div>
            <p><%= @user.admin? ? "Admin" : "User" %></p> 
      </div>
      <div>
        <h1 class="text-lg font-bold text-gray-600"><%= @user.first_name %> <%= @user.last_name %></h1>
        <p class="text-sm text-gray-500"><%= @user.email %></p>
        <p class="text-sm text-gray-500"><%= @user.phone_number %></p>
      </div>

        <div class="flex flex-col gap-3 justify-between items-center md:text-right px-4">
          
          <button class="w-full bg-[#377DFF] hover:bg-[#2b66d2] text-white py-2 md:px-8 rounded-sm text-base md:text-xl font-medium hover:cursor-pointer">
            Edit
          </button>
        </div>

    </div>

    
  </div>
</main>