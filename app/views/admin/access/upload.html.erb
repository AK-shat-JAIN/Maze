<main class="flex flex-col gap-2 md:gap-4 w-full md:px-8 md:py-8">
  <div class="flex justify-between items-center rounded-2xl bg-gray-200 p-4 md:px-8 md:py-8">
    <div class="flex flex-col w-full md:gap-10 md:py-8 md:px-36 rounded-2xl justify-center">
      <p class="py-2 text-xl md:text-3xl font-semibold text-gray-500">Upload Users</p>

      <div class="flex items-center justify-center bg-gray-100 px-4 py-16 md:py-24">
        <div class="flex flex-col gap-8 bg-white shadow-lg rounded-lg  max-w-md w-full p-8  md:py-12">
          <h2 class="text-xl md:text-3xl font-bold text-gray-800 mb-6 text-center">Import Users</h2>
          <%= form_with url: admin_import_path, local: true, multipart: true, class: "space-y-6" do |f| %>
            <div class="w-full flex justify-center flex-col gap-3 md:gap-4">
              <div>
                <%= f.label :file, "Upload File", class: "hidden text-sm font-medium text-gray-700 mb-2" %>
                <%= f.file_field :file, required: true, class: "block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100 hover:cursor-pointer" %>
              </div>
              <div>
                <%= f.submit "Import Users", class: "w-full py-3 px-4 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-md shadow focus:outline-none focus:ring-2 focus:ring-blue-400 cursor-pointer" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>


    </div>
  </div>

</main>
