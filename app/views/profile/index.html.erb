<main class="flex flex-col gap-8 md:gap-4 w-full bg-gray-200 rounded-2xl px-4 py-8 md:px-8 md:py-8">
  <div class="flex justify-between items-center">
    <p class="text-xl md:text-3xl text-center font-semibold text-gray-500">Profile</p>
  </div>

  <div class="flex flex-col justify-center gap-8">
    <div class="flex flex-col md:flex-row items-center w-full gap-8 py-12 px-4 bg-white rounded-3xl">
      <div class="flex flex-col md:w-2/5">
        <div class="flex justify-center">
          <%= image_tag(@user.avatar.present? ? @user.avatar : 'avatar.png', class: "w-34 md:w-1/2") %>
        </div>
        <p class="text-center md:text-xl"><%= @user.admin? ? "Admin" : "User" %></p> 
      </div>
      <div class="flex flex-col md:text-left w-full md:w-[50%] gap-4 md:gap-20">
        <div class="flex flex-col pl-1 md:pl-2 gap-2 md:gap-3">
          <div class="flex items-center">
            <p class="w-2/5 font-bold text-sm md:text-lg">Name: </p>
            <h1 class="text-lg md:text-3xl w-3/5 pl-2 py-1 md:py-2 rounded-md font-bold text-gray-600 bg-[#EAF4FF] border-indigo-600"><%= @user.first_name %> <%= @user.last_name %></h1>
          </div>
          <div class="flex items-center">
            <p class="w-2/5 font-bold text-sm md:text-lg">Email: </p>
            <h1 class="text-base md:text-xl w-3/5 pl-2 py-1 md:py-2 rounded-md text-gray-500 bg-[#EAF4FF] border-indigo-600"><%= @user.email %></h1>
          </div>
          <div class="flex items-center">
            <p class="w-2/5 font-bold text-sm md:text-lg  ">Phone Number: </p>
            <h1 class="text-base md:text-xl w-3/5 pl-2 py-1 md:py-2 rounded-md text-gray-500 bg-[#EAF4FF] border-indigo-600"><%= @user.phone_number %></h1>
          </div>
        </div>
        <div class="flex flex-col md:items-end gap-3 md:text-right">
          <button class="md:w-[50%] bg-[#377DFF] hover:bg-[#2b66d2] text-white py-2 rounded-sm text-base md:text-2xl font-medium hover:cursor-pointer">
            Edit
          </button>
        </div>
      </div>


    </div>

    
  </div>
</main>